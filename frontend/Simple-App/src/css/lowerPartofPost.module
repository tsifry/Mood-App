.likeAndReport {
    display: flex;
    justify-content: space-between;  /* Space out the buttons and like count */
    align-items: center;  /* Vertically center the content */
    padding: 0 16px; /* Add horizontal padding */
  }
  
  /* Style for the like button */
  .likeButton {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 24px;  /* Adjust size of the heart */
    color: #999;  /* Default color for the heart */
    transition: color 0.2s ease-in-out;  /* Smooth color transition */
  }
  
  /* Change color when liked (can be dynamic if you manage 'liked' state) */
  .likeButton.liked {
    color: #f00;  /* Red color when liked */
  }
  
  /* Hover and active states for the like button */
  .likeButton:hover {
    color: #f00;  /* Change color on hover */
  }
  
  .likeButton:active {
    transform: scale(1.2);  /* Slightly enlarge the heart when clicked */
    transition: transform 0.1s;  /* Smooth click animation */
  }
  
  /* Style for the like count */
  .likeCounter {
    font-size: 16px;
    color: #333;  /* Dark color for the like count */
    margin: 0 8px;  /* Space between like button and like count */
  }
  
  /* Style for the report button */
  .reportButton {
    background: none;
    border: none;
    cursor: pointer;
    font-size: 24px;  /* Adjust size of the flag */
    color: #999;  /* Default color for the report button */
    transition: color 0.2s ease-in-out;  /* Smooth color transition */
  }
  
  /* Hover effect for the report button */
  .reportButton:hover {
    color: #f00;  /* Change color on hover */
  }